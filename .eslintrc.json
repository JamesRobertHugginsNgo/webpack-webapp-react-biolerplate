{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "ignorePatterns": "dist/**/*.js",
    "overrides": [
        {
            "files": [
                "src/**/*.js",
                "src/**/*.jsx",
                "src/**/*.ts",
                "src/**/*.tsx"
            ],
            "rules": {
                "no-console": "warn"
            }
        },
        {
            "extends": [
                "plugin:@typescript-eslint/recommended"
            ],
            "files": [
                "src/**/*.ts",
                "src/**/*.tsx"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "@typescript-eslint"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "warn"
    }
}
